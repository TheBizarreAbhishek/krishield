            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Scheme Title"
            android:textColor="@color/kri_text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
