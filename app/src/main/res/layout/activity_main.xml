<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kri_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- App Name Pill -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_pill_blue"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="App Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/kri_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Settings Icon -->
            <ImageView
                android:id="@+id/btn_settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_preferences"
                app:tint="@color/kri_text_primary"
                android:padding="12dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_pill_dark"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Settings" />
        </LinearLayout>

        <!-- Large Weather Pill -->
        <LinearLayout
            android:id="@+id/weather_pill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pill_blue"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <!-- Location & Weather -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Detecting location..."
                        android:textColor="@color/kri_text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_weather_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading weather..."
                        android:textColor="@color/kri_text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--Â°C"
                    android:textColor="@color/kri_text_primary"
                    android:textSize="48sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Weather Stats Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Moisture -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’§ Moisture"
                        android:textColor="@color/kri_text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_moisture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/kri_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Pests -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ› Pests"
                        android:textColor="@color/kri_text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_pests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/kri_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Sunlight -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â˜€ï¸ Sunlight"
                        android:textColor="@color/kri_text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_sunlight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/kri_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Two Medium Pills Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Market Prices Pill -->
            <LinearLayout
                android:id="@+id/pill_market"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/bg_pill_dark"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š"
                    android:textSize="36sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Market\nPrices"
                    android:textColor="@color/kri_text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>


            <!-- Weather Pill -->
            <LinearLayout
                android:id="@+id/pill_weather"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/bg_pill_dark"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ¤ï¸"
                    android:textSize="36sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weather"
                    android:textColor="@color/kri_text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Large Farmers Community Feed Pill -->
        <LinearLayout
            android:id="@+id/pill_community"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pill_dark"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“°"
                    android:textSize="28sp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Farmers Community Feed"
                    android:textColor="@color/kri_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€º"
                    android:textColor="@color/kri_text_secondary"
                    android:textSize="24sp" />
            </LinearLayout>

            <!-- Latest Scheme -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_pill_blue"
                android:padding="12dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_scheme_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ¾ PM-KISAN Scheme Update"
                    android:textColor="@color/kri_text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_scheme_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next installment releasing soon. Check eligibility..."
                    android:textColor="@color/kri_text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest Government Schemes &amp; News"
                android:textColor="@color/kri_text_secondary"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Gemini Search Bar -->
        <LinearLayout
            android:id="@+id/gemini_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pill_dark"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@color/kri_text_secondary"
                android:textSize="24sp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ask KriShield"
                android:textColor="@color/kri_text_secondary"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_btn_speak_now"
                app:tint="@color/kri_text_secondary"
                android:layout_marginEnd="8dp"
                android:contentDescription="Voice" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_camera"
                app:tint="@color/kri_text_secondary"
                android:contentDescription="Camera" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
